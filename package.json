{
	"name": "adonis-api-app",
	"version": "4.1.0",
	"adonis-version": "4.1.0",
	"description": "Adonisjs boilerplate for API server with pre-configured JWT",
	"main": "index.js",
	"scripts": {
		"start": "node server.js",
		"test": "node ace test",
		"dev": "adonis serve --dev",
		"prettify": "prettier './**/*.js' --write",
		"jobs": "node ace kue:listen",
		"docker-up": "docker-compose -f docker/docker-compose.dev.yml up -d --build --force-recreate",
		"docker-down": "docker-compose -f docker/docker-compose.dev.yml down",
		"migrate": "node ace migration:run --force"
	},
	"keywords": [
		"adonisjs",
		"adonis-app"
	],
	"author": "@thejoaov <jvictorsantos852@gmail.com>",
	"license": "MIT",
	"private": true,
	"dependencies": {
		"@adonisjs/ace": "^5.0.8",
		"@adonisjs/auth": "^3.0.7",
		"@adonisjs/bodyparser": "^2.0.5",
		"@adonisjs/cors": "^1.0.7",
		"@adonisjs/fold": "^4.0.9",
		"@adonisjs/framework": "^5.0.9",
		"@adonisjs/ignitor": "^2.0.8",
		"@adonisjs/lucid": "^6.1.3",
		"@adonisjs/lucid-slugify": "^1.0.3",
		"@adonisjs/mail": "^3.0.10",
		"@adonisjs/redis": "^2.0.7",
		"adonis-kue": "^5.0.1",
		"pg": "^7.18.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-angular": "^8.3.4",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-plugin-import": "^2.20.0",
		"eslint-plugin-node": "^11.0.0",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"husky": "^4.2.1",
		"lint-staged": ">=10",
		"nodemon": "^2.0.2",
		"prettier": "^1.19.1",
		"sqlite3": "^4.1.1"
	},
	"autoload": {
		"App": "./app"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn prettify && lint-staged",
			"post-merge": "yarn",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.js": "eslint --fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		]
	}
}
